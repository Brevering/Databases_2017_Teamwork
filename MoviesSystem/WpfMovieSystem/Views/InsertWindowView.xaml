<Window x:Class="WpfMovieSystem.Views.InsertWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMovieSystem.Views"
        mc:Ignorable="d"
        x:Name="AddActorWindow"
        Title="Add new actor" Height="400" Width="500">
    <Grid x:Name="NewActorForm">
        <TextBlock x:Name="FirstNameBlock" HorizontalAlignment="Left" Margin="46,27,0,0" TextWrapping="Wrap" Text="First name" VerticalAlignment="Top" Height="19" Width="62"/>
        <TextBlock x:Name="LastNameBlock" HorizontalAlignment="Left" Margin="46,99,0,0" TextWrapping="Wrap" Text="Last name" VerticalAlignment="Top" Height="19" Width="62"/>
        <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="32" Margin="46,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263"/>
        <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" Height="32" Margin="46,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263"/>
        <TextBlock x:Name="MoviesBlock" HorizontalAlignment="Left" Margin="46,172,0,0" TextWrapping="Wrap" Text="Movies" VerticalAlignment="Top"/>
        <TextBox x:Name="MoviesTextBox" HorizontalAlignment="Left" Height="60" Margin="46,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263"/>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Height="28" Margin="347,280,0,0" VerticalAlignment="Top" Width="106"
                Command="{Binding AddNewActorCommand}"
                CommandParameter="{Binding ElementName=AddActorWindow, Mode=OneWay}"/>

    </Grid>
</Window>
